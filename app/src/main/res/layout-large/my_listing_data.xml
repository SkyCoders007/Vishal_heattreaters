<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/ll_row_resource_journal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="55dp">


            <LinearLayout


                android:background="@drawable/border_attribute_specification"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_1"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_2"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_3"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_4"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/et_5"
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                    <View
                        android:background="#000000"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/et_hardness1"
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_6"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/et_7"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View

                    android:background="@color/colorblack"
                    android:layout_height="match_parent">
                </View>





            </LinearLayout>


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>


        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"></LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>
